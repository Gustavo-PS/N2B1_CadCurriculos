    ViewData["Title"] = "Home Page";
}

<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/css/Index.css">

</head>

<body>
    <header>
        <nav>
            <h1 class="titulo">Gerador de Currículos </h1>
            <ul class="options">
                <li><a asp-area="" asp-controller="Curriculo" asp-action="Cadastro">Novo Currículo</a></li>
                <li><a asp-area="" asp-controller="Curriculo" asp-action="Listagem">Meus Currículos</a></li>
                <li><a asp-area="" asp-controller="Curriculo" asp-action="Sobre">Sobre</a></li>
            </ul>
        </nav>
